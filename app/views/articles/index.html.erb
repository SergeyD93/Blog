<h1>Listing articles</h1>
<% if signed_in? %>
  <%= link_to 'New article', new_article_path %>
<% end %>
<% @articles.each do |article| %>
    <div id=<%= article.id %>>
      <div class="article_header">
        <% render_article(article) %>
      </div>
      <p class="article_content"><%= article.text %></p>
    </div>
<% end %>

