<div id = 'article'>
  <p>
    <strong>Author:</strong>
    <%= User.find_by_id(@article.user_id).login %>
  </p>
  <p>
    <strong>Title:</strong>
    <%= @article.title %>
  </p>

  <p>
    <strong>Text:</strong>
    <%= @article.text %>
  </p>
  <%= link_to 'Edit', edit_article_path(@article) %> |
  <%= link_to 'Back', articles_path %> |
  <%= link_to 'Comment', :action => "comment", :id => @article.id, :remote => true %>

</div>
<h2>Comments</h2>
<%= render @article.comments %>